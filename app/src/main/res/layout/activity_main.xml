            android:layout_weight="1"
            android:onClick="find"
            android:tag="11" >
        </ImageView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_weight="1"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/image12"
            android:layout_width="match_parent"
